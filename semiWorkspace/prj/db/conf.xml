<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<settings>
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>

	<typeAliases>
		<typeAlias
			type="com.lookman.app.inquiry.dto.ProductMemberInquiryDto"
			alias="ProductMemberInquiryDto" />
		<typeAlias type="com.lookman.app.category.vo.CategoryVo"
			alias="CategoryVo" />

		<typeAlias
            type="com.lookman.app.product.dto.ProductByCategoryDto"
            alias="ProductByCategoryDto" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver"
					value="oracle.jdbc.driver.OracleDriver" />
				<property name="url"
					value="jdbc:oracle:thin:@127.0.0.1:1521:xe" />
				<property name="username" value="C##LOOKMAN" />
				<property name="password" value="1234" />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="/review-mapper.xml" />
		<mapper resource="/product-inquiry-mapper.xml" />
		<mapper resource="/category-mapper.xml" />
		<mapper resource="/product-mapper.xml" />
	</mappers>
</configuration>